const val x1: Float = 4.0f
const val y1: Float = 3.0f
const val x2: Float = -3.0f
const val y2: Float = -2.0f

fun calcularPendiente(): Float {
    val numerador = y2 - y1
    val denominador = x2 - x1

    return numerador / denominador
}

fun main(){
    val pendiente = calcularPendiente()
    println("La pendiente entre los puntos es: $pendiente")
}
